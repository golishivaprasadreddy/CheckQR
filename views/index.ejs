<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CheckQR - QR Code Generator</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');

        /* Custom animations */
        @keyframes fade-in {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fade-in 0.8s ease-out;
        }
    </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-r from-indigo-500 to-blue-600 font-[Poppins] px-4">
    
    <!-- Project Name -->
    <h2 class="text-4xl font-extrabold text-white drop-shadow-lg mb-1 mt-8 animate-fade-in">CheckQR</h2>
    <h3 class="text-lg font-semibold text-white drop-shadow-lg mb-3 animate-fade-in">TKR College of Engineering & Technology</h3>
    <h1 class="text-2xl font-semibold text-white drop-shadow-lg mb-6 animate-fade-in">Generate Your QR Code</h1>

    <!-- QR Code Form -->
    <form action="/generate" method="POST" class="bg-white/20 backdrop-blur-xl p-8 rounded-2xl shadow-lg w-full max-w-lg">
        
        <!-- Roll Number -->
        <div class="mb-4">
            <input type="text" name="rollNo" placeholder="Enter Roll Number" required 
                class="w-full p-3 border border-gray-300 rounded-lg bg-white/80 focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>

        <!-- Name -->
        <div class="mb-4">
            <input type="text" name="name" placeholder="Enter Your Name" required 
                class="w-full p-3 border border-gray-300 rounded-lg bg-white/80 focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        
        <!-- Year & Semester -->
        <div class="mb-4">
            <label for="yearSemester" class="block text-white font-semibold mb-1">Year & Semester:</label>
            <select name="yearSemester" id="yearSemester" required 
                class="w-full p-3 border border-gray-300 rounded-lg bg-white/80 focus:outline-none focus:ring-2 focus:ring-blue-400">
                <option value="1-1">1-1</option>
                <option value="1-2">1-2</option>
                <option value="2-1">2-1</option>
                <option value="2-2">2-2</option>
                <option value="3-1">3-1</option>
                <option value="3-2">3-2</option>
                <option value="4-1">4-1</option>
                <option value="4-2">4-2</option>
            </select>
        </div>

        <!-- Department -->
        <div class="mb-4">
            <label for="department" class="block text-white font-semibold mb-1">Department:</label>
            <select name="department" id="department" required 
                class="w-full p-3 border border-gray-300 rounded-lg bg-white/80 focus:outline-none focus:ring-2 focus:ring-blue-400">
                <option value="CSM">CSM</option>
                <option value="CSD">CSD</option>
                <option value="CSE">CSE</option>
                <option value="IT">IT</option>
                <option value="ECE">ECE</option>
                <option value="EEE">EEE</option>
            </select>
        </div>

        <!-- Section -->
        <div class="mb-6">
            <label for="section" class="block text-white font-semibold mb-1">Section:</label>
            <select name="section" id="section" required 
                class="w-full p-3 border border-gray-300 rounded-lg bg-white/80 focus:outline-none focus:ring-2 focus:ring-blue-400">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
            </select>
        </div>

        <!-- Submit Button -->
        <button type="submit" 
            class="w-full bg-gradient-to-r from-green-400 to-green-600 text-white font-semibold py-3 rounded-lg hover:shadow-xl hover:scale-105 transition duration-300">
            Generate QR Code
        </button>
    </form>

    <!-- Error Handling -->
    <% if (error) { %>
        <p class="text-red-300 font-semibold mt-4"><%= error %></p>
    <% } %>

    <!-- QR Code Display -->
    <% if (qrCode) { %>
        <div class="bg-white/20 backdrop-blur-xl p-6 rounded-lg shadow-lg mt-6">
            <h3 class="text-lg font-bold text-white mb-3">Generated QR Code:</h3>
            <img src="<%= qrCode %>" alt="QR Code" class="rounded-lg shadow-lg border-2 border-white">
        </div>
    <% } %>

    <!-- Footer -->
    <footer class="w-full text-center text-white text-sm mt-10 py-4">
        Developed by <span class="font-bold">Goli Shivaprasad Reddy</span> ❤️
    </footer>

</body>
</html>
